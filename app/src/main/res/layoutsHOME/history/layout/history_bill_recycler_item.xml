<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/cart_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgv_bill_photo"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="96dp"
        android:layout_height="96dp" />

    <LinearLayout
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_weight="100"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:maxLines="1"
            android:id="@+id/txtv_bill_shop_name"
            android:textSize="17sp"
            android:textColor="#1d1d1f"
            android:text="Tên quán"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLines="1"
            android:id="@+id/txtv_bill_shop_address"
            android:textSize="15sp"
            android:text="Địa chỉ"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtv_bill_price"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="35000đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imgv_delete_bill"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>