<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:weightSum="10"
    android:background="@drawable/cart_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtv_cart_dish_name"
            android:textSize="16sp"
            android:textColor="#1d1d1f"
            android:text="Tên món"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtv_cart_dish_price"
            android:textSize="14sp"
            android:textColor="#2C2C2E"
            android:text="Giá món"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtv_cart_dish_amount"
            android:textColor="#1d1d1f"
            android:gravity="center"
            android:textSize="18sp"
            android:text="x1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>