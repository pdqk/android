<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/top_toolbar_in_homepage_background"
            android:layout_width="match_parent"
            android:layout_height="67.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Tôi"
                android:textColor="#303030"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_notifications_bell_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/me"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="202.5dp">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="54dp"
                        android:layout_width="108dp"
                        android:layout_height="108dp">

                        <ImageView
                            android:background="#F39860"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:background="#eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="13.5dp">

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtv_nav_to_vi_voucher"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_voucher"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Ví Voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtv_nav_to_shopee_xu"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_price"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Shopee xu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtv_nav_to_thanh_toan"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_purse"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Thanh toán"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtv_nav_to_dia_chi"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Địa chỉ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="13.5dp">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtv_nav_to_moi_ban_be"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Mời bạn bè"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtv_nav_to_gop_y"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Góp ý"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="13.5dp">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtv_nav_to_ungdungchuquan"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_retail"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Ứng dụng cho chủ quán"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="13.5dp">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtv_nav_to_chinh_sach"
                        android:drawablePadding="12dp"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawableLeft="@drawable/ic_question"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Chính sách quy định"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtv_nav_to_setting"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_settings"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Cài đặt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtv_nav_to_info"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/ic_info"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingStart="18dp"
                        android:textSize="18sp"
                        android:background="@drawable/textview_me_background"
                        android:textColor="#1d1d1f"
                        android:text="Về ứng dụng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="#eeeeee"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="18dp"
                    android:paddingStart="18dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_dang_xuat"
                        android:textSize="16sp"
                        android:background="@drawable/rectangle_button_3"
                        android:textColor="#554B2E"
                        android:textAllCaps="false"
                        android:text="Đăng xuất"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="24dp"
                        android:textColor="#1d1d1f"
                        android:text="Phiên bản 1.0.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#1d1d1f"
                        android:text="A iN7073h8i1d Team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>